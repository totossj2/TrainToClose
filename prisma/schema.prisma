generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  sessions  Session[]
  createdAt DateTime @default(now())
}

model Session {
  id         String   @id @default(cuid())
  userId     String
  title      String?
  transcript String?
  feedback   Json?
  duration   Int?
  ended      Boolean  @default(false)
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
}
